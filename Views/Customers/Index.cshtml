@model IEnumerable<Customers>
@{
    ViewData["Title"] = "Klienci";
}
@if (User.Identity.IsAuthenticated)
{
    <body>
        <h1>Spis Wszystkich Klientów</h1>

        <div class="row">
            <div class="col-md-12 ">
                <table class="table">
                    <thead></thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CustomersId)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Surname)</th>
                        <th>@Html.DisplayNameFor(model => model.IdNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th>@Html.DisplayNameFor(model => model.ApplicationNumber)</th>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <th>Akcje</th>
                        }
                        </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.CustomersId)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.IdNumber)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.ApplicationNumber)
                            </td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <td class="align-middle">
                                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CustomersId">Edycja</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomersId">Usuń</a>
                                </td>
                            }
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="text-white">
            <a asp-controller="Customers" asp-action="Create" class="btn btn btn-dark">Dodaj nowego klienta</a>
        </div>
    </body>
}